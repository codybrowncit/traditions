

<table class="table table-striped">

	<% @traditions.each do |tradition| %>
		<% if tradition.approved %>
					
				<% tradition.pictures.each do |picture| %>
				<tr>
					<td> <%= image_tag picture.url, class:"img-responsive"  %></td>
				</tr>
				
				<td>
					<%= link_to picture.user.name, picture.user %> completed <%= link_to tradition.name, tradition_path(tradition) %> on <%= picture.created_at.in_time_zone("Mountain Time (US & Canada)").strftime("%b %e") %>
				</td>
				<% end %>
			</tr>
		<% end %>
		
	<%end%>

</table>
